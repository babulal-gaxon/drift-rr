 <div class="dt-root">
  <%= render 'layouts/partials/header', collection: @partials %> 
  <main class="dt-main">
    <%= render 'layouts/partials/sidebar', collection: @partials %>
    <!-- Site Content Wrapper -->
    <div class="dt-content-wrapper">
     <!-- Site Content -->
      <div class="dt-content">

        <!-- Page Header -->
        <div class="dt-page__header">
          <h1 class="dt-page__title">File Upload</h1>
        </div>
        <!-- /page header -->

        <!-- Grid -->
        <div class="row">

          <!-- Grid Item -->
          <div class="col-12">

            <!-- Card -->
            <div class="dt-card">

              <!-- Card Header -->
              <div class="dt-card__header">

                <!-- Card Heading -->
                <div class="dt-card__heading">
                  <h3 class="dt-card__title">dropzone</h3>
                </div>
                <!-- /card heading -->

              </div>
              <!-- /card header -->

              <!-- Card Body -->
              <div class="dt-card__body">

                <!-- Dropzone -->
                <form id="dropzone" action="http://demo.g-axon.com/dropzone/upload.php"
                      class="dropzone border-dashed border-primary">
                  <div class="fallback">
                    <input name="file" type="file" multiple/>
                  </div>
                </form>
                <!-- /dropzone -->

              </div>
              <!-- /card body -->

            </div>
            <!-- /card -->

          </div>
          <!-- /grid item -->

        </div>
        <!-- /grid -->

      </div>
      <!-- /site content -->
      <%= render 'layouts/partials/footer', collection: @partials %>
    </div>
    <%= render 'layouts/partials/customizer', collection: @partials %>
  </main>
</div>
<%= render 'layouts/partials/end', collection: @partials %>
<!-- Dependencies -->
<%= javascript_include_tag 'dropzone/dist/min/dropzone.min.js' %>
<%= javascript_include_tag 'dropzone.js' %>
<%= javascript_include_tag 'script.js' %>